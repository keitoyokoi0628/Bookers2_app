
<div class="container">
 <div class="row">
  <div class="col-lg-3">
   <h1>User info</h1>
   <% if @user.image.attached? %>
     <%= image_tag @user.image, size: "63x63" %>
   <% else %>
     <%= image_tag 'no_image', size: "63x63" %>
   <% end %>
    <h3>name</h3>
    <%= @user.name %>
    <h3>introduction</h3>

   <%= link_to "編集", edit_user_path(@user.id) %>

   <h1>New Book</h1>
    <%= form_with model: @book, local:true do |f| %>
     <h4>Title</h4>
      <%= f.text_field :title %>
     <h4>Opinion</h4>
      <%= f.text_area :body %>
       <%= f.submit 'Create Book' %>
    <% end %>
  </div>

  <div class="col-lg-9">
   <h1>Books</h1>
   <% @books.each do |book| %>

     <p>Title</p>
     <span>
       <%=link_to book.title, book_path(book.id) %>
     </span>

     <p>Opinion</p>
     <%=link_to book.body %>

   <% end %>
  </div>

</div>