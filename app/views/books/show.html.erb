

<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
    <h1>User info</h1>
      <%= image_tag @book.user.get_image("100x100") %>
     <h3>name</h3>
     <%= @book.user.name %>
     <h3>introduction</h3>
     <%= @book.user.introduction %>

     <p>
     <%= link_to edit_user_path(@book.user), class: "btn btn-outline-secondary" do %>
      <i class="fas fa-user-cog"></i>
     <% end %>
    </p>

    <h1>New book</h1>
     <%= form_with model: @newbook, local:true do |f| %>
      <h4>Title</h4>
       <%= f.text_field :title %>
      <h4>Opinion</h4>
       <%= f.text_area :body %>
        <%= f.submit 'Create Book', class: "btn btn-success" %>
     <% end %>
    </div>




   <div class="col-md-8 offset-md-1">
     <h1>Book detail</h1>
     <table class="table table-hover table-inverse">
      <tr>
        <td>
         <%=link_to user_path(@book.user) do %>
          <%= image_tag @book.user.get_image("100x100") %>
          <p><%= @book.user.name %><p></p>
         <% end %>
        </td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <td>
         <% if @book.user == current_user %>
         <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success btn-sm" %>
         <% end %>
        </td>
        <td>
         <% if @book.user == current_user %>
         <%= link_to "Destroy", destroy_book_path(@book.id), class:"btn btn-danger btn-sm", method: :delete, "data-confirm" => "本当に削除しますか？" %>
         <% end %>
         </td>
      </tr>
     </table>
    </div>
   </div>
  </div>
 </div>