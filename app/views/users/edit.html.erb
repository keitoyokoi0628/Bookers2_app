 <% if @user.errors.any? %>
   <%= @user.errors.count %>件のエラーが発生しました
   <ul>
     <% @user.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
   </ul>
 <% end %>

<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h1>User info</h1>

   <%= form_with model: @user, local:true do |f| %>
     <label for="inputName">Name</label>
     <p><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></p>
     <label for="inputImage">Image</label>
     <p><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p>
     <label for="inputintroduction">Introduction</label>
     <p><%= f.text_area :introduction, autofocus: true, id:"inputintroduction", placeholder:"自己紹介文"%></p>
     <p><%= f.submit "Update User", class: "btn btn-secondary" %></p>
   <% end %>
  </div>
 </div>
</div>